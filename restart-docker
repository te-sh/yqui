#! /bin/sh

args=$(getopt -o '' -l skip-pull,skip-yqui,skip-test -- "$@") || exit 1
eval "set -- $args"

while [ $# -gt 0 ]; do
    case $1 in
        --skip-pull) SKIP_PULL=1; shift ;;
        --skip-yqui) SKIP_YQUI=1; shift ;;
        --skip-test) SKIP_TEST=1; shift ;;
        --) shift; break ;;
    esac
done

if [ -z $SKIP_PULL ]; then
    git pull
    docker-compose --file docker-compose.prod.yml pull
fi

if [ -z $SKIP_YQUI ]; then
    COMPOSE_PROJECT_NAME=yqui PORT=8085 docker-compose --file docker-compose.prod.yml down
    COMPOSE_PROJECT_NAME=yqui PORT=8085 docker-compose --file docker-compose.prod.yml up -d ws web proxy
fi

if [ -z $SKIP_TEST ]; then
    rm -f ws/log/test.log
    COMPOSE_PROJECT_NAME=test PORT=8800 docker-compose --file docker-compose.prod.yml down
    COMPOSE_PROJECT_NAME=test PORT=8800 docker-compose --file docker-compose.prod.yml up -d ws web proxy
fi

docker system prune --volumes --force
