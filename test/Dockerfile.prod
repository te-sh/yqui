FROM node:16.3.0-alpine3.13

RUN apk update \
 && apk upgrade \
 && apk add udev ttf-freefont font-noto-cjk unifont chromium \
 && rm -rf /var/cache/apk/*

USER node
ENV HOME /home/node
ENV TESTDIR $HOME/test
RUN mkdir -p $TESTDIR

WORKDIR $TESTDIR
ADD --chown=node:node package.json yarn.lock ./

RUN yarn install \
 && yarn cache clean

ADD --chown=node:node . ./
