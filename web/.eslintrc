{
  "env": {
    "browser": true,
    "es2017": true
  },
  "extends": [
    "standard",
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    },
    "ecmaVersion": 9,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": [
      2,
      { "argsIgnorePattern": "^_" }
    ],
    "react/prop-types": [0],
    "react/jsx-uses-react": [1],
    "react/jsx-uses-vars": 1
  }
}
