FROM node:14.8.0-alpine3.12 AS builder

WORKDIR /app

ADD . ./
RUN yarn install \
 && yarn build

FROM node:14.8.0-alpine3.12

WORKDIR /app

RUN apk update \
 && apk upgrade \
 && rm -rf /var/cache/apk/* \
 && yarn global add serve \
 && yarn cache clean

COPY --from=builder /app/build ./build

CMD ["serve", "-s", "build"]
